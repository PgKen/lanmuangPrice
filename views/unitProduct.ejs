<!DOCTYPE html>
<html>

<head>
    <title><%= title %></title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="/javascripts/control.js"></script>

</head>

<body>
    <div class="mainCheckPriceBox">
        <%- include('headder') %>

        <div class="content">
            <%- include('menu') %>
            <ul class="type">
                <li>&nbsp;</li>
                <form action="/addUnit" method="post">
                    <li>
                        <span></span>
                        <label for="">เพิ่มหน่วย</label>
                        <input type="text" name="nameUnit">
                        <button type="submit">เพิ่ม</button>
                        <span></span>
                    </li>
                </form>
                <li>&nbsp;</li>
                <li class="underLine">&nbsp;</li>
                <li>&nbsp;</li>
                <li>&nbsp;</li>
                <!-- data -->
                <li class="tbHead">
                    <span class="noneBg"></span>
                    <span></span>
                    <span style="flex: 3;">หน่วย</span>
                    <span></span>
                    <span></span>
                    <span class="noneBg"></span>
                </li>
                <% for(let i = 0; i < dataUnit.length; i++){ %>
                <li class="listData">
                    <span></span>
                    <span class="lineBox"><%= (i+1) %></span>

                    <span class="lineBox" style="flex: 3;"><%=dataUnit[i].unitName%></span>
                    <span class="lineBox">
                        <i class="material-icons edit" onclick="editType(<%=dataUnit[i].id%>)">
                            create
                        </i>
                    </span>
                    <span class="lineBox">
                        <i class="material-icons del" onclick="deleteUnit(<%=dataUnit[i].id%>)">
                            delete_forever
                        </i>
                    </span>

                    <span></span>
                </li>
                <% } %>
                <li>&nbsp;</li>

            </ul>
        </div>
    </div>
</body>

<script>
    function deleteUnit(i) {
        if (confirm("ต้องการลบประเภทสินค้า หรือไม่")) {
            location.href = "/delUnit/" + i
        }
    }

    function editType(i) {
        //location.href = "/editType/" + i
        alert("ยังอยู่ในขั้นตอนการพัฒนาโปรแกรม โปรดติดต่อทีม IT Srimuang")
    }
</script>

</html>